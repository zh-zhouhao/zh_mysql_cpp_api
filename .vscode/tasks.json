{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                // "${file}",
                //"${fileDirname}/*.cpp",
                "${workspaceFolder}/main/*.cpp",
                "-o",
                // "${fileDirname}/${fileBasenameNoExtension}",
                "${workspaceFolder}/.build/DebugTest"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$g++"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}